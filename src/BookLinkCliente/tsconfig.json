{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es6",
    "module": "esnext",
    "strict": false,  
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
